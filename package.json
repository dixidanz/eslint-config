{
  "name": "@dixidan/eslint-config",
  "type": "module",
  "version": "1.0.0",
  "description": "Dan's ESLint config",
  "author": "Dan (https://github.com/dixidanz)",
  "license": "MIT",
  "homepage": "https://github.com/dixidanz/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dixidanz/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/dixidanz/eslint-config/issues"
  },
  "keywords": [],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build": "nr gen && tsup --clean --dts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "gen": "tsx scripts/typegen.ts",
    "prepack": "nr build",
    "release": "bumpp && pnpm publish",
    "watch": "tsup --watch",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": ">=0.50.0",
    "astro-eslint-parser": "^1.0.2",
    "eslint": "^9.10.0",
    "eslint-plugin-astro": "^1.2.0",
    "eslint-plugin-format": ">=0.1.0",
    "prettier-plugin-astro": "^0.14.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    },
    "astro-eslint-parser": {
      "optional": true
    },
    "eslint-plugin-astro": {
      "optional": true
    },
    "eslint-plugin-format": {
      "optional": true
    },
    "prettier-plugin-astro": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "^1.0.0",
    "@clack/prompts": "^0.10.0",
    "@eslint/markdown": "^6.3.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/eslint-plugin": "^1.1.38",
    "astro-eslint-parser": "^1.2.2",
    "eslint-flat-config-utils": "^2.0.1",
    "eslint-merge-processors": "^2.0.0",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import-x": "^4.10.0",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-toml": "^0.12.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^10.0.0",
    "eslint-plugin-yml": "^1.17.0",
    "globals": "^16.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "local-pkg": "^1.1.1",
    "toml-eslint-parser": "^0.10.0",
    "vue-eslint-parser": "^10.1.1",
    "yaml-eslint-parser": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@types/node": "^22.13.14",
    "@unocss/eslint-plugin": "66.1.0-beta.8",
    "bumpp": "^10.1.0",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-typegen": "^2.1.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.5.0",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.12.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vue": "^3.5.13"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
